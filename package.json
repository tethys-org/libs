{
  "name": "libs",
  "private": true,
  "scripts": {
    "build": "rm -rf ./dist && tsc -p tsconfig.json",
    "release": "lerna version --conventional-commits --yes",
    "pub": "lerna publish from-git"
  },
  "homepage": "https://github.com/tethys-org/libs#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/tethys-org/libs.git"
  },
  "bugs": {
    "url": "https://github.com/tethys-org/libs/issues"
  },
  "publishConfig": {},
  "dependencies": {},
  "eslintConfig": {
    "extends": "eslint:recommended",
    "env": {
      "node": true,
      "es6": true
    }
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-lerna-changelog"
    }
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "pretty-quick --staged"
    }
  },
  "workspaces": [
    "packages/component/*"
  ],
  "devDependencies": {
    "eslint": "^7.28.0",
    "lerna": "^4.0.0",
    "@typescript-eslint/eslint-plugin": "^4.27.0",
    "@typescript-eslint/parser": "^4.27.0",
    "@commitlint/cli": "^12.1.4",
    "@commitlint/config-conventional": "^12.1.4",
    "@types/node": "^15.12.2",
    "cz-lerna-changelog": "^2.0.3",
    "husky": "^6.0.0",
    "lint-staged": "^11.0.0",
    "standard-version": "^9.3.0",
    "typescript": "^4.3.2"
  }
}
