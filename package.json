{
  "name": "libs",
  "private": true,
  "scripts": {
    "install": "lerna bootstrap",
    "change": "lerna changed",
    "diff": "lerna diff",
    "release": "lerna version --conventional-commits --yes",
    "test": "karma start",
    "test:node": "ts-node ./node_modules/jasmine/bin/jasmine --config=jasmine.json",
    "prebuild": "git clean -fdx packages/*/tsconfig.tsbuildinfo -e packages/*/node_modules",
    "build": "yarn tsc -b",
    "publish": "yarn test && yarn build && yarn release && lerna publish --force-publish"
  },
  "homepage": "https://github.com/tethys-org/libs#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/tethys-org/libs.git"
  },
  "bugs": {
    "url": "https://github.com/tethys-org/libs/issues"
  },
  "publishConfig": {},
  "dependencies": {
    "@angular/core": "^12.2.9",
    "@tethys/cdk": "^12.0.0"
  },
  "eslintConfig": {
    "extends": "eslint:recommended",
    "env": {
      "node": true,
      "es6": true
    }
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-lerna-changelog"
    }
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "pretty-quick --staged"
    }
  },
  "workspaces": [
    "packages/*"
  ],
  "devDependencies": {
    "@commitlint/cli": "^12.1.4",
    "@commitlint/config-conventional": "^12.1.4",
    "@types/jasmine": "^3.9.1",
    "@types/node": "^15.12.2",
    "@typescript-eslint/eslint-plugin": "^4.27.0",
    "@typescript-eslint/parser": "^4.27.0",
    "clean-webpack-plugin": "^4.0.0",
    "cz-lerna-changelog": "^2.0.3",
    "eslint": "^7.28.0",
    "husky": "^6.0.0",
    "jasmine": "^3.9.0",
    "jasmine-core": "^3.9.0",
    "karma": "^6.3.4",
    "karma-chrome-launcher": "^3.1.0",
    "karma-jasmine": "^4.0.1",
    "karma-spec-reporter": "^0.0.32",
    "karma-typescript": "^5.5.2",
    "lerna": "^4.0.0",
    "lint-staged": "^11.0.0",
    "standard-version": "^9.3.0",
    "typescript": "^4.3.2"
  }
}
